      <h2><%= pluralize(employee_skill.errors.count, "error") %> prohibited this employee_skill from being saved:</h2>

      <ul>
      <% employee_skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :employee_id, value: params[:id] %>

  <div class="field is-grouped">
    <div class="control">
