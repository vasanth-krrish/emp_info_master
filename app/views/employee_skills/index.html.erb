<p id="notice"><%= notice %></p>

<h1>Employee Skills</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_skills.each do |employee_skill| %>
      <tr>
        <td><%= employee_skill.employee %></td>
        <td><%= employee_skill.skill %></td>
        <td><%= link_to 'Show', employee_skill %></td>
        <td><%= link_to 'Edit', edit_employee_skill_path(employee_skill) %></td>
        <td><%= link_to 'Destroy', employee_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

